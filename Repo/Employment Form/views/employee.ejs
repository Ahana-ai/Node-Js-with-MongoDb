<%- include('layouts/header') %>

    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card mt-2 mx-auto p-4 bg-light">
                    <div class="card-body bg-light">

                        <div class="container">
                            <form action="/insert" method="post" id="contact-form" role="form">
                                <div class="controls">
                                    <h1>Employee Form</h1>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label for="form_name">Employee Name:</label>
                                            <input type="text" name="eName" id="form_name" class="form-control"
                                                placeholder="Please enter your name *" required="required"
                                                data-error="Name is required.">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label for="form_salary">Basic salary:</label>
                                            <input type="number" name="basicSalary" id="form_salary"
                                                class="form-control" placeholder="Please enter your basic salary *"
                                                required="required" data-error="Salary is required.">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label for="form_DA">DA:</label>
                                            <input type="number" name="da" id="form_DA" class="form-control"
                                                placeholder="Please enter your DA *" required="required"
                                                data-error="DA is required.">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label for="form_HRA">HRA:</label>
                                            <input type="number" name="hra" id="form_HRA" class="form-control"
                                                placeholder="Please enter your HRA *" required="required"
                                                data-error="HRA is required.">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <input type="submit" class="btn btn-success btn-send  pt-2 btn-block"
                                            value="Submit">
                                    </div>
                                </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h1>Employee List</h1>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Sl. No.</th>
                            <th scope="col">Employee Name</th>
                            <th scope="col">Basic Salary</th>
                            <th scope="col">DA</th>
                            <th scope="col">HRA</th>

                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% employeeData.map((data, index)=> { %>
                            <tr>
                                <td>
                                    <%= ++index %>
                                </td>
                                <td>
                                    <%= data.eName %>
                                </td>
                                <td>
                                    <%= data.basicSalary %>
                                </td>
                                <td>
                                    <%= data.da %>
                                </td>
                                <td>
                                    <%= data.hra %>
                                </td>
                                <!-- <td><a href="edit/<%= data._id %>">Edit</a></td>
                                <td><a href="delete/<%= data._id %>">Delete</a></td> -->
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include('layouts/footer') %>